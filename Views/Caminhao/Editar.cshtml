@model CaminhaoModel
@{
    ViewData["Title"] = "Editar informações do veículo";
}

<div class="text-center">
    <h1 class="display-6">Editar Caminhão</h1>
    <br/>

</div>

<form asp-controller="Caminhao" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Caminhão">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição do Caminhão">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-success btn-block" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
</form>