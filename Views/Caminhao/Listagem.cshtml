@model List<CaminhaoModel>
@{
    ViewData["Title"] = "Listagem de Caminhões";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Caminhao" asp-action="Criar">Adicionar novo Caminhão</a>
    </div>
    <br />

    <h1 class="display-6">Listagem de Caminhões</h1>
    <br/>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Data de Criação</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (CaminhaoModel caminhao in Model)
                {
                    <tr>
                        <th scope="row">@caminhao.Id</th>
                        <td>@caminhao.Nome</td>
                        <td>@caminhao.Descricao</td>
                        <td>@caminhao.Data</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>